FROM node:12

ARG EN_VIVO_BACKEND_API_URL
ENV EN_VIVO_BACKEND_API_URL $EN_VIVO_BACKEND_API_URL

ARG EN_VIVO_MEDIA_URL
ENV EN_VIVO_MEDIA_URL $EN_VIVO_MEDIA_URL

ARG EN_VIVO_STORYBOOK_PORT
ENV EN_VIVO_STORYBOOK_PORT $EN_VIVO_STORYBOOK_PORT

WORKDIR /en-vivo-frontend


CMD yarn start-storybook -p $EN_VIVO_STORYBOOK_PORT --ci --quiet